{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "exactOptionalPropertyTypes": true,
    "importsNotUsedAsValues": "error",
    "lib": [
      "es2022",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
